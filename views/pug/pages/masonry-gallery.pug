extends  ../_skeleton

block variables
	- var activeCategory = 'Pages'
	- var pageName = 'Masonry gallery'

block title
	title=pageName

block page
	// Page Header
	include ../sections/_header-default
	='\n'
	
	+breadcrumb-classic('bg-image-breadcrumbs-1', pageName, "Browse Our Gallery", true,
	{
		0: {"title": "Home", "href": "./"},
		1: {"title": "Pages", "href": "#"},
		2: {"title": pageName}
	}
	)
	='\n'
	
	//Grid gallery
	section.section.section-lg.bg-white
		.shell-wide
			// Isotope Filters
			.isotope-filters.isotope-filters-horizontal
				button.isotope-filters-toggle.button.button-sm.button-primary(data-custom-toggle='#isotope-filters', data-custom-toggle-disable-on-blur="true"): span Filter
					span.caret
				ul.isotope-filters-list.isotope-filters-list-button#isotope-filters
					li: a.active(data-isotope-filter='*', data-isotope-group='gallery', href='#') all properties
					li: a(data-isotope-filter='Type 1', data-isotope-group='gallery', href='#') residential
					li: a(data-isotope-filter='Type 2', data-isotope-group='gallery', href='#') commercial
					li: a(data-isotope-filter='Type 3', data-isotope-group='gallery', href='#') land
			
			// Isotope Content
			.row.row-30.isotope.isotope-fix(data-isotope-layout='masonry', data-isotope-group='gallery', data-lightgallery="group")
				.col-xs-12.col-sm-6.col-lg-4.isotope-item(data-filter='*')
					+gallery-item({
						imageName: 'masonry-gallery-1-570x790',
						imageOriginal: 'gallery-original-12-800x1200',
						title: 'Photo #1',
						titleLink: '#'
					})
				.col-xs-12.col-sm-6.col-lg-4.isotope-item(data-filter='Type 1')
					+gallery-item({
						imageName: 'masonry-gallery-2-570x380',
						imageOriginal: 'gallery-original-11-1200x800',
						title: 'Photo #2',
						titleLink: '#'
					})
				.col-xs-12.col-sm-6.col-lg-4.isotope-item(data-filter='Type 2')
					+gallery-item({
						imageName: 'masonry-gallery-3-570x790',
						imageOriginal: 'gallery-original-13-1200x800',
						title: 'Photo #3',
						titleLink: '#'
					})
				.col-xs-12.col-sm-6.col-lg-4.isotope-item(data-filter='Type 3')
					+gallery-item({
						imageName: 'masonry-gallery-4-570x790',
						imageOriginal: 'gallery-original-8-1200x800',
						title: 'Photo #4',
						titleLink: '#'
					})
				.col-xs-12.col-sm-6.col-lg-4.isotope-item(data-filter='Type 1')
					+gallery-item({
						imageName: 'masonry-gallery-5-570x380',
						imageOriginal: 'gallery-original-4-1200x800',
						title: 'Photo #5',
						titleLink: '#'
					})
				.col-xs-12.col-sm-6.col-lg-4.isotope-item(data-filter='Type 2')
					+gallery-item({
						imageName: 'masonry-gallery-6-570x380',
						imageOriginal: 'gallery-original-9-1200x800',
						title: 'Photo #6',
						titleLink: '#'
					})
				.col-xs-12.col-sm-6.col-lg-4.isotope-item(data-filter='Type 3')
					+gallery-item({
						imageName: 'masonry-gallery-7-570x380',
