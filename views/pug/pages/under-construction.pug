extends  ../_skeleton

block variables
  - var pageName = 'Under construction'

block title
  title=pageName

block page
  section.section.one-screen-page.bg-construct-image-1.context-dark
    .one-screen-page-inner
      // Page Header
      header.section.page-header
        .rd-navbar-brand.brand
          a.brand-logo(href='index.html')
            +png(logoInverse)

      // Page Content
      section.section.page-content
        .shell
          .range.range-xs-center
            .cell-sm-10
              h1.page-subtitle We're Getting Ready to Launch Soon
              p.heading-5.page-description Our website is under construction, we are working very hard to give you the best experience on our new web site. Stay ready, we`re launching soon.
              form.rd-mailform.rd-mailform-inline.text-left(data-form-output="form-output-global", data-form-type='forms', method='post', action='bat/rd-mailform.php')
                .form-wrap
                  label.form-label(for="inline-email") Your e-mail
                  input#inline-email.form-input(type="email" name="email" data-constraints="@Email @Required")
                button(type="submit").button.button-primary Subscribe


      // Page Footer
      footer.section.page-footer.text-center
        p.copyright
          =brandName
          = " "
          span.copyright-year
          = " "
          | &#169;
          = " "
          | All Rights Reserved
          = " "
          a.link(href='privacy-policy.html') Terms of Use
          = " "
          | and
          = " "
          a.link(href='privacy-policy.html') Privacy Policy